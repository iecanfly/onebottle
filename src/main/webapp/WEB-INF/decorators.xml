<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/40*.jsp</pattern>
        <pattern>/*ajax=true*</pattern>
        <pattern>/struts/*</pattern>
        <pattern>/resources/*</pattern>
        <pattern>/ajax/*</pattern>

    </excludes>

    <decorator name="default" page="default.jsp">
        <pattern>/*</pattern>
        <pattern>/index</pattern>
    </decorator>
    <decorator name="empty" page="empty.jsp">
        <pattern>/signup**</pattern>
        <pattern>/login**</pattern>
        <pattern>/userform**</pattern>
        <pattern>/updatePassword**</pattern>
    </decorator>
    <decorator name="sellefDefault" page="sellerDefault.jsp">
        <pattern>/seller**</pattern>
    </decorator>
    <decorator name="buyerDefault" page="buyerDefault.jsp">
        <pattern>/buyer**</pattern>
    </decorator>
</decorators>
